  margin-top: 10rpx;
}

.back_box {
  display: flex;
  justify-content: center;
  margin: 25rpx 20rpx;
}

.l_bcak {
  position: relative;
  width: 230rpx;
  font-size: 0;
}

.l_bcak .t_img {
  width: 230rpx;
  height: 130rpx;
}

.l_bcak .t_time {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: #fff;
  font-size: 20rpx;
}

.r_bcak {
  display: inline-block;
  font-size: 0;
}

.r_bcak .b_title {
  display: inline-block;
