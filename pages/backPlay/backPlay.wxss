  margin: 25rpx 0 10rpx 20rpx;
}

.r_bcak .b_info {
  font-size: 22rpx;
  color: #b3b3b3;
  margin-left: 20rpx;
}

.see_more {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0 100rpx;
}

.see_more .down_arrow {
