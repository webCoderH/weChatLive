video {
  width: 100%;
}
.tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #595fd5;
}

.tabs .item {
  position: relative;
  width: 25%;
  text-align: center;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 50rpx;
}

.tabs .b_line {
  position: absolute;
  bottom: -3rpx;
  left: 53rpx;
  width: 80rpx;
  height: 6rpx;
  background: #4257e5;
  border-radius: 80px;
}

.tabs .active {
  font-size: 36rpx;
  color: #3d50da;
}

.live_person_info .j_content {
  width: 714rpx;
  /* height: 167rpx; */
  padding-bottom: 16rpx;
  border: 1px solid #d5d7e6;
  margin: 16rpx auto 30rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
}

.live_person_info .j_content .l_box {
  /* display: flex;
  align-items: center; *//* display: inline-block; */
